<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Venue Details</h3>
    </div>

    <div class="col-8 offset-3">
        <div class="listing-card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="venue_image">
            <div class="card-body">
                <p class="card-text mt-2">
                    <i>Hosted by: 
                        <button type="button" class="btn btn-link p-0 pb-1 mb-1" style="text-decoration: none; color: #fe424d; font-weight: 600;" data-bs-toggle="modal" data-bs-target="#contactModal">
                            <%=listing.owner.username%> <i class="fa-regular fa-address-card ms-1"></i>
                        </button>
                    </i>
                </p>
                <div class="card-text">
                    <b><%=listing.title%></b><br>
                    <%=listing.description%> <br>
                    <b>&#8377; <%= listing.price.value.toLocaleString("en-IN") %></b> / <%= listing.price.unit %> <br>
                    <%=listing.location%>, <%=listing.country%>
                </div>
            </div>
        </div>

        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="btns mb-4">
            <a href="/listings/<%=listing.id%>/edit" class="btn edit-btn col-1">Edit</a>
            <form method="POST" action="/listings/<%=listing.id%>?_method=DELETE" class="d-inline ms-3">
                <button class="btn btn-dark">Delete Venue</button>
            </form>
        </div>
        <% } %>

        <hr>

        <% if(currUser) { %>
        <div class="col-12 mb-3">
            <h4>Leave a Review</h4>
            <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>

                <div class="mb-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required placeholder="Share your experience at this venue..."></textarea>
                    <div class="invalid-feedback">
                        Please provide a comment for your review.
                    </div>
                </div>
                <button class="btn btn-outline-dark">Submit Review</button>
            </form>
        </div>
        <hr>
        <% } %>

        <% if(listing.reviews.length > 0) { %>
        <div class="row">
            <p><b>All Reviews</b></p>
            <% for(review of listing.reviews) { %>
            <div class="card col-5 mb-3 ms-3">
                <div class="card-body">
                    <h5 class="card-title">@<%=review.author.username%></h5>
                    <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                    <p class="card-text"><%=review.comment%></p>
                    
                    <% if(currUser && currUser._id.equals(review.author._id)) { %>
                    <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" class="mb-2">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
        <% } %>
    </div>
</div>

<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="contactModalLabel">Contact Info for <%= listing.owner.username %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <% if(currUser) { %>
              <div class="mb-3">
                  <p><strong>Email:</strong> <a href="mailto:<%= listing.owner.email %>"><%= listing.owner.email %></a></p>
                  <% if(listing.owner.phone) { %>
                      <p><strong>Phone:</strong> <%= listing.owner.phone %></p>
                  <% } %>
              </div>
              <p class="text-muted small">Reach out to the host to discuss booking details!</p>
          <% } else { %>
              <div class="text-center">
                  <p>You must be logged in to view contact details.</p>
                  <a href="/login" class="btn btn-dark btn-sm">Login Now</a>
              </div>
          <% } %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<hr>
  <div class="col-8 offset-3 mb-3">
    <h3>Where you'll be</h3>
    <div id="map" style="height: 400px; width: 100%; border-radius: 10px;"></div>
</div>
<script>
    
    const mapToken = "<%= process.env.MAPBOX_TOKEN %>";
    const listing = JSON.parse('<%- JSON.stringify(listing) %>');
</script>